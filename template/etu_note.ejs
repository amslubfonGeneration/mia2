<body>     
    <h1>TP Informations</h1>
    <% if(locals.data){ %>
        
        <% for(const post of data) { %>
            <div class="container">
                <div class="info">
                    <span class="label">Matricule :<%= post.id_etudiant %></span><br>
                    <span class="label">Semestre :<%= post.Semestres%></span>
                </div>
                <div class="info">
                    <span class="label">Note de <%= post.matieres  %>:
                        <span class="note">
                            <%= `${post.Notes ||'Note indisponible pour le moment.Note'}/20`%>
                        </span>
                    </span>
                </div>
                <hr>
                </div>
                
        <% } %>
    <% } %>
    <% if(locals.data.length === 0){ %>
        <div class="container">
            <p>
                Notes de TP indisponibles pour le moment.
            </p>
            <a href="/">Retour</a>
        </div>
     <% } %>
    

